{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "process",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "showReuseMessage": false,
                "group": "eerium"
            },
            "args": [
                "clean"
            ]
        },
        {
            "label": "configure",
            "type": "process",
            "command": "./configure.sh",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "eerium"
            }
        },
        {
            "label": "build",
            "type": "process",
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "eerium"
            }
        },
        {
            "label": "run",
            "type": "process",
            "command": "./eerium",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false,
                "group": "eerium"
            }
        },
        {
            "label": "build_and_run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build",
                "run"
            ]
        },
    ]
}